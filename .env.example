# Natural Language Geometry Engine Configuration Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# LLM API CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Hugging Face Configuration  
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
HF_TOKEN=your_huggingface_token_here

# =============================================================================
# LLM MODEL SETTINGS
# =============================================================================

# Default LLM Model (options: "openai", "huggingface", "local")
DEFAULT_LLM_PROVIDER=openai

# OpenAI Model Settings
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2048

# Hugging Face Model Settings
HF_MODEL_NAME=microsoft/DialoGPT-medium
HF_TEMPERATURE=0.1
HF_MAX_LENGTH=2048

# =============================================================================
# FINE-TUNING CONFIGURATION
# =============================================================================

# Fine-tuning dataset paths (relative to project root)
DATASET_DIR=./fine_tuning_datasets
TRAINING_FILE=training_data.jsonl
VALIDATION_FILE=validation_data.jsonl

# Fine-tuning parameters
FINE_TUNE_EPOCHS=3
FINE_TUNE_BATCH_SIZE=4
FINE_TUNE_LEARNING_RATE=5e-5
VALIDATION_SPLIT=0.2

# =============================================================================
# CAD ENGINE CONFIGURATION
# =============================================================================

# NLG Engine Settings
NLG_CONFIDENCE_THRESHOLD=0.7
NLG_ENABLE_CACHING=true
NLG_CACHE_SIZE=1000

# CAD Generation Settings
DEFAULT_MATERIAL=aluminum
DEFAULT_UNITS=mm
DEFAULT_PRECISION=0.1

# Manufacturing constraints
MAX_DIMENSION=1000.0
MIN_DIMENSION=0.1
DEFAULT_TOLERANCE=0.05

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Gradio App Configuration
GRADIO_SERVER_NAME=127.0.0.1
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false
GRADIO_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/app.log

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable/disable features
ENABLE_LLM_INTEGRATION=true
ENABLE_FINE_TUNING_UI=true
ENABLE_DATASET_GENERATION=true
ENABLE_3D_RENDERING=true

# Rate limiting (requests per minute)
API_RATE_LIMIT=60
LLM_RATE_LIMIT=10

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment (development, production, testing)
ENVIRONMENT=development

# Enable debug features
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_INTERMEDIATE_FILES=false

# Cache directories
CACHE_DIR=./cache
TEMP_DIR=./temp
OUTPUT_DIR=./output
